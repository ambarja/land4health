Package: land4health
Title: Remote Sensing Metrics for Spatial Health Analysis 
Version: 0.0.0.9000
Authors@R: c(
    person("Yomali", "Ferreyra", email = "yomali.ferreyra@upch.pe", role = c("aut", "cre"), comment = c(ORCID = "0000-0002-5184-9595")),
